        setPressedButton('home');
        setTimeout(() => {
          window.location.href = '/';
        }, 150);
      } else if (e.key.toLowerCase() === 'c') {
        setPressedButton('cancel');
        setTimeout(() => {
          window.location.href = '/home';
        }, 150);
      }
