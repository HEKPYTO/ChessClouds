        send_msg(
            &mut writer,
            ClientMessage::Auth {
                game_id: GAME_ID.to_string(),
                user_id: BLACK_ID.to_string(),
            },
        )
        .await?;

        writer.close().await?;
    }
    {
        println!("should fail: white already connected");
        let mut writer1 = connect_socket(url).await?;
        let mut writer2 = connect_socket(url).await?;

        send_msg(
            &mut writer1,
